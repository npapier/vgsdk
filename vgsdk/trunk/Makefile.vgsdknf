VERSION=1.2
REVISION=

all install dep dist-all dist-clean clean help dep-all world allConfig info leaktracer mpatrol full debug release debug-install full-install release-install boundchecker unittest dsp doc tar msi printvar:
	cd ../vgnf;		make '$@';
	cd ../Mesher;	make '$@';

checkout_tags:
	svn co http://dev-srv:8080/svn/SrcLib/vgnf/tags/tdvpm_$(VERSION) ../vgnf
	svn co http://dev-srv:8080/svn/SrcLib/Mesher/tags/tdvpm_$(VERSION) ../Mesher

checkout:
	svn $(REVISION) co http://dev-srv:8080/svn/SrcLib/vgnf/trunk ../vgnf
	svn $(REVISION) co http://dev-srv:8080/svn/SrcLib/Mesher/trunk ../Mesher

update diff:
	cd ../vgnf;	svn '$@';
	cd ../Mesher;	svn '$@';

tags:
	# itself
	- svn mkdir http://dev-srv:8080/svn/SrcLib/vgnf/tags/ --message "Release $(VERSION)"
	svn copy http://dev-srv:8080/svn/SrcLib/vgnf/trunk http://dev-srv:8080/svn/SrcLib/vgnf/tags/tdvpm_$(VERSION) --message "Release $(VERSION)"
	# libs
	- svn mkdir http://dev-srv:8080/svn/SrcLib/Mesher/tags/ --message "Release $(VERSION)"
	svn copy http://dev-srv:8080/svn/SrcLib/Mesher/trunk http://dev-srv:8080/svn/SrcLib/Mesher/tags/tdvpm_$(VERSION) --message "Release $(VERSION)"
