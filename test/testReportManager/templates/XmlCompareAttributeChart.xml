<%page args="legend, errors"/>
<chart>
	<chart_type>
		<value>line</value>
		<value>line</value>
		<value>line</value>
	</chart_type>
	<axis_category size="10" orientation="diagonal_up" skip="${str(len(legend) / 5)}"/>
	<axis_ticks value_ticks="false" category_ticks="true" major_thickness="1" minor_thickness="0" major_color="000000" position="outside"/>
	<chart_data>
		<row>
			<string></string>
		% for l in legend:
			<string>${str(l)}</string>
		% endfor
  		</row>
  		<row>
     		<string>Errors</string>				
		% for e in errors:
     		<number>${str(e)}</number>
		% endfor
  		</row>		
	</chart_data>
	
	<chart_border color="999999" left_thickness="1" bottom_thickness="1"/>
	<chart_grid_h alpha="5" color="666666" thickness="3"/>
	<chart_pref line_thickness="2" point_shape="none"/>
	<chart_value position="cursor"/>

   <chart_guide horizontal='true'
                vertical='true'
                thickness='1' 
                color='ff4400' 
                alpha='75' 
                type='dashed' 
                
                 
                radius='1'
                fill_alpha='0'
                line_color='ff4400'
                line_alpha='75'
                line_thickness='1'
             
                size='10'
                text_color='ffffff'
                background_color='ff4400'
                text_h_alpha='90'
                text_v_alpha='90' 
                />
	
	<series_color>
		<color>99dd99</color>
	</series_color>
	<legend_label layout="vertical" alpha="60"/>
	<legend_rect x="60" y="50" width="10"/>
	<draw>
		<text width="400" height="30" h_align="center" v_align="top" size="12">Simulation errors</text>
	</draw>
</chart>		
